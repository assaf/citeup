{
  "include": [
    ".react-router/types/**/*",
    "**/.client/**/*",
    "**/.server/**/*",
    "**/*",
    "test/**/*.ts"
  ],
  "exclude": [
    "__screenshots__",
    ".github",
    ".vercel",
    "biome.json",
    "build",
    "node_modules",
    "package.json",
    "prisma/generated",
    "prisma/seed"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "~/*": [
        "./app/*"
      ],
      "~/prisma": [
        "./prisma/generated/client"
      ]
    },
    "resolveJsonModule": true,
    "rootDirs": [
      ".",
      "./.react-router/types"
    ],
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": [
      "node",
      "vite/client"
    ],
    "verbatimModuleSyntax": true
  }
}